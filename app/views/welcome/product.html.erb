<div class="container">
   <h1 class="title is-1"><%= @product.name %></h1>
</div>   

<div class="container">
   <%= link_to 'Volver a inicio', root_path, class: 'button is-primary' %>
</div>

<div class="container">
   
   <div class="columns is-multiline is-mobile">      
         <div class="column is-6-desktop is-12-mobile producto has-text-centered">
            <div class="columns is-multiline is-mobile">
               <div class="column is-12-desktop is-12-mobile imagen">
                  <% if @product.images.attached? %>   
                     <%= image_tag(@product.images.first, alt: 'Imagen') %>
                  <% else %>
                     <%= image_tag("noimage.jpg", alt: 'Imagen') %>
                  <% end %> 
               </div>
               <div class="column is-12-desktop is-12-mobile miniaturas">
                  <% if @product.images.attached? %>    
                     <% @product.images.each do |image| %>           
                        <%= image_tag(image.variant(resize_to_limit: [100, 100]), alt: 'Imagen') %>
                     <% end %>
                  <% end %>
               </div>
            </div>
         </div>    
         <div class="column is-6-desktop is-12-mobile producto desc has-text-left">               
            <p class="is-size-6">Código de producto: <%= @product.reference %></p>
            <p class="is-size-6">Descripción: <span class="desc_producto"><%= @product.description %></span></p>
            <%= form_tag({}, {:method => :get}) do |f| %>  
                <% if @product.sizes.present? %>
                    <div data-controller="hello" class="field formulario">            
                        <%= label_tag :name, 'Talla' %>
                        <select name="product[name]" id="product[name]" data-action="change->hello#precios" data-hello-target="valor">
                           <%= @product.sizes.order(created_at: :asc).each do |size| %>
                              <option value="<%= size.price %>"><%= size.name %></option>
                           <% end %>
                        </select>
                        <p>Precio: <span data-hello-target="aparece"><%= @product.sizes.first.price %></span> €</p>
                     </div>
                     <div class="field boton_form">
                        <%= submit_tag 'Comprar' %>        
                     </div>
               <% end %>
            <%end%>
         </div>
   </div>
</div>