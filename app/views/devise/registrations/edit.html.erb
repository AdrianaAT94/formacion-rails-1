<div class="container">
  <h1 class="title is-1">Modificar <%= resource_name.to_s.humanize %></</h1>
</div>

<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    
    <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :email, 'Email', class: 'label' %>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    
    <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :password, 'Clave', class: 'label' %>
              <i>(leave blank if you don't want to change it)</i>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
      </div>
    </div>

    <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :password_confirmation, 'Repite clave', class: 'label' %>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
          </div>
      </div>
    </div>

    <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :current_password, 'Clave actual', class: 'label' %>
              <i>(we need your current password to confirm your changes)</i>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
          </div>
      </div>
    </div>

    <div class="actions field boton_form">
        <div class="columns">
            <div class="column">
                <%= f.submit 'Actualizar' %>
            </div>
        </div>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Volver", :back %>

</div>