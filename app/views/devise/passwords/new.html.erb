<div class="container">
  <h1 class="title is-1">Contrase√±a olvidada</</h1>
</div>

<div class="container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :email, 'Email', class: 'label' %>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>
      </div>
    </div>

    <div class="actions field boton_form">
        <div class="columns">
            <div class="column">
                <%= f.submit 'Enviame instrucciones para recuperar mi clave' %>
            </div>
        </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
