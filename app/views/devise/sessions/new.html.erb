<div class="container">
  <h1 class="title is-1">Log in</</h1>
</div>

<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :email, 'Email', class: 'label' %>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>
      </div>
    </div>

    <div class="field formulario">
      <div class="columns">
          <div class="column">
              <%= f.label :password, 'Clave', class: 'label' %>
          </div>
      </div>
      <div class="columns">
          <div class="column">
            <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
          </div>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

  <div class="actions field boton_form">
      <div class="columns">
          <div class="column">
              <%= f.submit 'Log in' %>
          </div>
      </div>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>