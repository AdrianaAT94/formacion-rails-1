<%= form_for @category do |f| %>
    <% if @category.errors.any? %>
        <div class="columns">
            <div class="column" id="error_explanation">
                <h2><%= pluralize(@category.errors.count, "error") %> guardando categoria:</h2>
                <ul>
                <% @category.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %> 
                </ul>
            </div>
        </div>
    <% end %>  
    <div class="field formulario">
        <div class="columns">
            <div class="column">
                <%= f.label :name, 'Nombre', class: 'label' %>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <%= f.text_field :name, class: 'input' %>
            </div>
        </div>  
    </div>  
    <div class="field boton_form">
        <div class="columns">
            <div class="column">
                <%= f.submit 'Enviar' %>
            </div>
        </div>
    </div>
<% end %> 