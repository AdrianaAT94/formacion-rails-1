<div class="container">
   <h1 class="title is-1"> Categorías registradas</h1>
</div>

<div class="container">
  <%= link_to 'Volver a inicio', root_path, class: 'button is-primary' %>
  <%= link_to 'Nueva categoría', new_category_path, class: 'button is-primary' %>

   <table class="table is-bordered has-text-centered tiendas">
      <tr>
         <th>Nombre</th>
         <th colspan="3">Opciones</th>
      </tr>

      <% @categories.each do |category| %>
         <tr>
            <td><%= category.name %></td> 
            <td><%= link_to 'Mostrar', categories_path(category) %></td>
            <td><%= link_to 'Modificar', edit_category_path(category) %></td> 
            <td><%= link_to 'Eliminar', category_path(category), method: :delete, data: {confirm: 'Estas seguro?'} %></td> 
         </tr>
      <% end %>
   </table>
</div>